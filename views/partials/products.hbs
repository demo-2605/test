<div>
  <div class="m-6 grid grid-cols-1 sm:grid-cols-3 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-4 mt-8">
    {{#each products}}
        <div class="border rounded-lg bg-gray-100 hover:shadow-lg shadow-md">
          <div class="rounded-t-lg bg-white pt-2 pb-2">
              <img class="crop mx-auto" src="{{this.image}}" class="card-img-top" alt="...">
          </div>
          <div class="pl-4 pr-4 pb-4 pt-4 rounded-lg">
            <h4 class="mt-1 font-semibold text-base leading-tight truncate text-gray-700">{{this.title}} </h4>
            <div class="mt-1 text-sm text-gray-700">{{this.description}}</div>
          </div>
        </div>
    {{/each}}
  </div>
</div>
